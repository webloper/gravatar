{
    "name": "webloper/gravatar",
    "description" : "A small library intended to provide easy integration of... Gravatar :)",
    "keywords": [
        "webloper",
        "gravatar"
    ],
    "homepage": "https://github.com/webloper/gravatar",
    "license": "MIT",
    "authors": [
        {
            "name": "Ravi Kumar",
            "email": "webloper@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Webloper\\Gravatar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webloper\\Gravatar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
